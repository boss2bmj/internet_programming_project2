<p id="notice"><%= notice %></p>

<h1>Listing Car Photos</h1>

<table>
  <thead>
    <tr>
      <th>Image name</th>
      <th>Image </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @car_photos.each do |car_photo| %>
      <tr>
        <td><%= car_photo.image_name %></td>
        <td><%= image_tag car_photo.image.url(:thumb) %></td>
        <td><%= link_to 'Show', car_photo %></td>
        <td><%= link_to 'Edit', edit_car_photo_path(car_photo) %></td>
        <td><%= link_to 'Destroy', car_photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

